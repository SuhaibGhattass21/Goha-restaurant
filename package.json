{
  "name": "goha",
  "version": "1.0.0",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc --project tsconfig.json",
    "build:clean": "rm -rf dist && tsc --project tsconfig.json",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "migration:run": "typeorm-ts-node-commonjs migration:run -d ./src/infrastructure/database/postgres/db.ts",
    "migration:run:prod": "typeorm migration:run -d ./dist/infrastructure/database/postgres/db.js",
    "migration:generate": "typeorm-ts-node-commonjs migration:generate -d ./src/infrastructure/database/postgres/db.ts",
    "migration:revert": "typeorm-ts-node-commonjs migration:revert -d ./src/infrastructure/database/postgres/db.ts",
    "schema:sync": "echo 'WARNING: schema:sync is disabled in production for safety'",
    "schema:drop": "echo 'WARNING: schema:drop is disabled for safety. Use db:recovery with --force flag if needed'",
    "seed": "ts-node src/infrastructure/database/postgres/seed.ts",
    "seed:prod": "NODE_ENV=production node seed-prod.js",
    "verify:tables": "node scripts/verify-tables.js",
    "backup:create": "node scripts/create-backup.js",
    "safety:check": "node scripts/production-safety-check.js",
    "db:recovery": "node scripts/emergency-db-recovery.js",
    "test": "jest --config jest.config.js",
    "test:watch": "jest --watch --config jest.config.js",
    "test:coverage": "jest --coverage --config jest.config.js",
    "test:coverage:watch": "jest --coverage --watch --config jest.config.js",
    "test:debug": "node --inspect-brk ./node_modules/.bin/jest --runInBand --config jest.config.js",
    "test:debug:watch": "node --inspect-brk ./node_modules/.bin/jest --runInBand --watch --config jest.config.js",
    "test:debug:coverage": "node --inspect-brk ./node_modules/.bin/jest --runInBand --coverage --config jest.config.js",
    "test:debug:coverage:watch": "node --inspect-brk ./node_modules/.bin/jest --runInBand --coverage --watch --config jest.config.js",
    "start": "node dist/main.js",
    "start:dev": "tsc && nodemon dist/main.js",
    "dev": "nodemon src/main.ts",
    "start:prod": "npm run safety:check && npm run migration:run:prod && npm run seed:prod && npm start",
    "prod": "NODE_ENV=production npm run start:prod",
    "log:cli": "ts-node src/cli/logging-cli.ts",
    "log:config": "npm run log:cli config show",
    "log:config:validate": "npm run log:cli config validate",
    "log:config:export": "npm run log:cli config export",
    "log:config:import": "npm run log:cli config import",
    "log:list": "npm run log:cli logs list",
    "log:clean": "npm run log:cli logs clean",
    "log:tail": "npm run log:cli logs tail",
    "log:tail:error": "npm run log:cli logs tail --file error.log",
    "log:tail:security": "npm run log:cli logs tail --file security.log",
    "log:analyze:errors": "npm run log:cli analyze errors",
    "log:analyze:performance": "npm run log:cli analyze performance",
    "log:monitor:status": "npm run log:cli monitor status",
    "log:monitor:test": "npm run log:cli monitor test-alert",
    "log:health": "npm run log:cli health check"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@supabase/supabase-js": "^2.50.0",
    "bcrypt": "^6.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "commander": "^9.4.1",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "express-rate-limit": "^7.5.0",
    "express-validator": "^7.2.1",
    "glob": "^11.0.2",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^7.0.3",
    "nodemon": "^3.1.10",
    "pg": "^8.16.0",
    "pg-monitor": "^3.0.0",
    "reflect-metadata": "^0.2.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "tsconfig-paths": "^4.2.0",
    "typeorm": "^0.3.24",
    "uuid": "^11.1.0",
    "winston": "^3.17.0",
    "zod": "^3.25.57"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/express-rate-limit": "^5.1.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.3.1",
    "@types/supertest": "^6.0.3",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@typescript-eslint/eslint-plugin": "^8.34.0",
    "@typescript-eslint/parser": "^8.34.0",
    "eslint": "^9.28.0",
    "supertest": "^7.1.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3"
  }
}
